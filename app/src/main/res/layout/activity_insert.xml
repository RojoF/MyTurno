<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE8E1E1">


    <TextView
        android:id="@+id/Cartelera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#536DFE"
        android:fontFamily="@font/lemon_milk"
        android:padding="10dp"
        android:text="@string/cabezera"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:fontFamily="@font/lemon_milk"
        android:padding="10dp"
        android:text="Busca tu lista de espera para saber el estado actual del turno"
        android:textAlignment="center"
        android:textColor="#536DFE"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cartelera" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/border"
        android:spinnerMode="dialog"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:ms_arrow_tint="@color/colorAccent"
        app:ms_background_selector="300"
        app:ms_dropdown_height="wrap_content"
        app:ms_dropdown_max_height="350dp"
        app:ms_hint="Selecciona un nÃºmero de cola"
        app:ms_text_color="#000000" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/borde_redondo"
        android:backgroundTint="#536DFE"
        android:onClick="onClickbtnRedondo"
        android:padding="10dp"
        android:text="Buscar"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>