<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:background="#FFE8E1E1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#536DFE"
            android:fontFamily="@font/lemon_milk"
            android:padding="5dp"
            android:text="SELECCIONA IR A COLAS O NAVEGACION HOSPITAL"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/Turnobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/cola"
            android:elevation="15dp"
            android:onClick="onClickTurno"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/Rutabtn"
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:layout_marginTop="25dp"
            android:background="#000000"
            android:elevation="15dp"
            android:onClick="onClickRuta"
            android:padding="50dp"
            android:src="@drawable/ruta" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>